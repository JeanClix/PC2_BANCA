@model PC2.ViewModel.BancoVM
@{
    ViewData["Title"] = "Gesti√≥n de Banco";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">@ViewData["Title"]</h2>
        <div class="row">
            <div class="col-md-5">
                <h3>Formulario de Banco</h3>
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="FormBanco.NombreTitular" class="form-label">Nombre del Titular</label>
                        <input asp-for="FormBanco.NombreTitular" class="form-control" />
                        <span asp-validation-for="FormBanco.NombreTitular" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FormBanco.TipoCuenta" class="form-label">Tipo de Cuenta</label>
                        <input asp-for="FormBanco.TipoCuenta" class="form-control" />
                        <span asp-validation-for="FormBanco.TipoCuenta" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FormBanco.SaldoInicial" class="form-label">Saldo Inicial</label>
                        <input asp-for="FormBanco.SaldoInicial" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="FormBanco.SaldoInicial" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FormBanco.Email" class="form-label">Email</label>
                        <input asp-for="FormBanco.Email" class="form-control" type="email" />
                        <span asp-validation-for="FormBanco.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
            <div class="col-md-7">
                <h3>Listado de Bancos</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre del Titular</th>
                            <th>Tipo de Cuenta</th>
                            <th>Saldo</th>
                            <th>Email</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListBanco)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.NombreTitular</td>
                                <td>@item.TipoCuenta</td>
                                <td>@item.SaldoInicial.ToString("C")</td>
                                <td>@item.Email</td>
                                @* <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                </td> *@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>